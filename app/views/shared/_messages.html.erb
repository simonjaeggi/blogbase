
<% flash.each do |name, msg| %>
    <div class="notification is-<%= "#{name}" %>">    
        <button class="delete" id="btnDeleteMessageBox" onclick="deleteParent('btnDeleteMessageBox')"></button>
            <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        </div>
<% end %>
