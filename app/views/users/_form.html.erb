<%= render 'shared/errors', obj: @user %>
<%= form_for(@user, :html => {role: "form"}) do |f| %>
<div class="field">
    <label class="label">Username</label>
    <div class="control has-icons-left">
        <%= f.text_field :username, class: "input", placeholder: "Enter username", autofocus: true %>
        <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
        </span>
    </div>

</div>
<div class="field">
    <label class="label">Email</label>
    <div class="control has-icons-left">
        <%= f.text_field :email, class: "input", type:"email", placeholder: "Enter email", autofocus: true %>
        <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
        </span>
    </div>
</div>
<div class="field">
    <label class="label">Password</label>
    <div class="control has-icons-left">
        <%= f.text_field :password, class: "input", type:"password", placeholder: "Enter password", autofocus: true %>
        <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
        </span>
    </div>
</div>
<div class="field">
    <div class="control">
      <%= f.submit class: 'button is-success' %>
    </div>
</div>
<% end %>
